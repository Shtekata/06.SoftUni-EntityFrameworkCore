@model AllPetsViewModel

<h1>All Pets</h1>

<div>
    @if (!Model.PreviousDisabled)
    {
        <a href="/Pets/All?page=@Model.PreviousPage" class="float-left btn btn-info">Prev</a>
    }
    @if (!Model.NextDisabled)
    {
        <a href="/Pets/All?page=@Model.NextPage" class="float-right btn btn-info">Next</a>
    }
</div>

<br />
<br />

<table class="table table-bordered table-striped th-background-green">
    <tr>
        <th>
            Type
        </th>
        <th>
            Breed
        </th>
        <th>
            Price
        </th>
        <th>

        </th>
    </tr>
    @foreach (var item in Model.Pets)
    {
        <tr>
            <td>
                @item.Category
            </td>
            <td>
                @item.Breed
            </td>
            <td>
                $@item.Price
            </td>
            <td class=" text-center">
                <a href="/Pets/Delete/@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
</table>

